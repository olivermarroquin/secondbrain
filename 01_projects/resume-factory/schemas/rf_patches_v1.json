{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "rf_patches_v1.json",
  "title": "Resume Factory Patches v1",
  "type": "object",
  "required": ["schema", "generated_utc", "approved_change_numbers", "patches"],
  "properties": {
    "schema": { "const": "rf_patches_v1" },
    "generated_utc": { "type": "string" },
    "approved_change_numbers": {
      "type": "array",
      "items": { "type": "integer" }
    },
    "patches": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["num", "op"],
        "properties": {
          "num": { "type": "integer" },
          "op": {
            "type": "string",
            "enum": ["ADD", "REPLACE_SECTION", "DELETE"]
          },
          "section": { "type": "string" },

          "subsection": { "type": ["string", "null"] },
          "subsection_occurrence": { "type": ["integer", "null"] },

          "to_text": { "type": ["string", "null"] },
          "to_paragraphs": {
            "type": ["array", "null"],
            "items": { "type": "string" }
          },

          "from_text": { "type": ["string", "null"] }
        },
        "additionalProperties": true
      }
    },
    "meta": { "type": ["object", "null"] }
  },
  "additionalProperties": true
}
